{
  "name": "metro5",
  "version": "1.0.0",
  "private": true,
  "main": "packages/core/src/index.js",
  "workspaces": [
    "packages/*"
  ],
  "description": "Modern web component library",
  "keywords": [
    "web-components",
    "library",
    "javascript",
    "css",
    "html",
    "metro-ui",
    "modern-ui",
    "metro",
    "modern",
    "datetime",
    "m4q",
    "cake",
    "color",
    "animation"
  ],
  "author": "Serhii Pimenov <serhii@pimenov.com.ua> (https://pimenov.com.ua)",
  "license": "MIT",
  "scripts": {
    "test": "lerna run test --stream",
    "update:version": "lerna version --no-push",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna run build --stream",
    "build:animation": "lerna --scope @metro5/animation exec -- npm run build",
    "build:color": "lerna --scope @metro5/color exec -- npm run build",
    "build:utils": "lerna --scope @metro5/utils exec -- npm run build",
    "build:cake": "lerna --scope @metro5/cake exec -- npm run build",
    "build:datetime": "lerna --scope @metro5/datetime exec -- npm run build",
    "build:query": "lerna --scope @metro5/query exec -- npm run build",
    "build:core": "lerna --scope @metro5/core exec -- npm run build"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@rollup/plugin-babel": "^5.2.2",
    "babel-loader": "^8.2.2",
    "eslint": "^7.17.0",
    "glob": "^7.1.6",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.36.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "webpack": "^5.13.0",
    "webpack-cli": "^4.3.1"
  }
}
